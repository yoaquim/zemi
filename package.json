{
  "name": "zemi",
  "version": "1.2.8",
  "description": "zemi is a data-driven and reverse-routing library for Express. It provides out-of-the-box OpenAPI support, allowing you to specify and autogenerate an OpenAPI spec.",
  "keywords": [
    "reverse-routing",
    "data-driven",
    "router",
    "openapi"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yoaquim/zemi"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.18.1"
  },
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.2",
    "prettier": "2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typedoc": "^0.23.8",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsc && node .",
    "test": "jest",
    "prettify": "npx prettier --write .",
    "cc": "codeclimate analyze",
    "typedoc": "npx typedoc --entryPointStrategy expand ./src/ && open docs/index.html"
  },
  "author": "Yoaquim Cintr√≥n",
  "license": "ISC"
}
